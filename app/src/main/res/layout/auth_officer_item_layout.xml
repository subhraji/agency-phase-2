<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:background="@drawable/grey_corner_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/full_name_htv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Full name"
        android:textColor="@color/text_grey"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/full_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/full_name_htv"
        app:layout_constraintStart_toStartOf="@+id/full_name_htv"
        app:layout_constraintEnd_toStartOf="@+id/edit_btn"/>

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_delete_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/full_name_htv"/>

    <ImageView
        android:id="@+id/edit_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintEnd_toStartOf="@+id/delete_btn"
        app:layout_constraintTop_toTopOf="@+id/full_name_htv"/>
    <TextView
        android:id="@+id/email_htv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/full_name_tv"
        app:layout_constraintStart_toStartOf="@+id/full_name_tv"
        android:text="Email address"
        android:textColor="@color/text_grey"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/email_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/email_htv"
        app:layout_constraintStart_toStartOf="@+id/email_htv"
        app:layout_constraintEnd_toStartOf="@+id/edit_btn"/>
    <TextView
        android:id="@+id/mobile_htv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/email_tv"
        app:layout_constraintStart_toStartOf="@+id/email_tv"
        android:text="Mobile number"
        android:textColor="@color/text_grey"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/mobile_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/mobile_htv"
        app:layout_constraintStart_toStartOf="@+id/mobile_htv"
        app:layout_constraintEnd_toStartOf="@+id/role_tv"/>

    <TextView
        android:id="@+id/role_htv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/role_tv"
        app:layout_constraintStart_toStartOf="@+id/role_tv"
        android:text="Role"
        android:textColor="@color/text_grey"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/role_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>