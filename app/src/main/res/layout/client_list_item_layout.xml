<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/settings_item_background"
    android:padding="10dp"
    android:layout_margin="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/client_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/client_finger_print_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color_grey"
        app:layout_constraintTop_toBottomOf="@+id/client_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_baseline_delete_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/edit_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintEnd_toStartOf="@+id/delete_btn"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/full_name_htv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Full Name"
        app:layout_constraintStart_toEndOf="@+id/client_img"
        app:layout_constraintEnd_toStartOf="@+id/edit_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/full_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/full_name_htv"
        app:layout_constraintStart_toStartOf="@+id/full_name_htv"
        app:layout_constraintEnd_toStartOf="@+id/edit_btn"
        app:layout_constraintBottom_toTopOf="@+id/linear_lay_1"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/light_black"/>
    <LinearLayout
        android:id="@+id/linear_lay_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/full_name_tv"
        app:layout_constraintBottom_toTopOf="@+id/mobile_htv"
        app:layout_constraintStart_toStartOf="@+id/full_name_htv"
        app:layout_constraintEnd_toStartOf="@+id/add_btn"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/email_htv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/light_black"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/add_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_add_circle_outline_24"/>
    <TextView
        android:id="@+id/mobile_htv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        app:layout_constraintStart_toStartOf="@+id/full_name_htv"
        app:layout_constraintBottom_toTopOf="@+id/mobile_tv"
        app:layout_constraintTop_toBottomOf="@+id/linear_lay_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="13sp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/mobile_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/light_black"
        app:layout_constraintStart_toStartOf="@+id/mobile_htv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>