<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PostJobsDetailsActivity">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/job_details_shimmer_layout" />
    </com.facebook.shimmer.ShimmerFrameLayout>
    <ScrollView
        android:id="@+id/main_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="70dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/delete_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_delete_outline_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Job Details"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/delete_btn"
                app:layout_constraintStart_toEndOf="@+id/back_btn"
                app:layout_constraintTop_toTopOf="@+id/back_btn" />


            <androidx.cardview.widget.CardView
                android:id="@+id/time_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/back_btn"
                app:layout_constraintTop_toBottomOf="@+id/back_btn"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/error_red"
                app:cardCornerRadius="7dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/status_htv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:text="Status"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/status_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/status_htv"
                            android:layout_alignStart="@+id/status_htv"
                            android:layout_gravity="center"
                            android:text="QUICK CALL"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/time_left_htv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Time left"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/timer_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/time_left_htv"
                            android:layout_alignStart="@+id/time_left_htv"
                            android:layout_gravity="center"
                            android:text="00:30:00"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/job_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:text="Urgently need a female vhasv caregiver for old patient"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/back_btn"
                app:layout_constraintTop_toBottomOf="@+id/time_btn" />

            <ImageView
                android:id="@+id/person_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_person_24"
                app:layout_constraintStart_toStartOf="@+id/job_title_tv"
                app:layout_constraintTop_toBottomOf="@+id/job_title_tv"
                app:tint="@color/text_grey" />

            <TextView
                android:id="@+id/person_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="2 Senior"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/person_img"
                app:layout_constraintStart_toEndOf="@+id/person_img"
                app:layout_constraintTop_toTopOf="@+id/person_img" />

            <TextView
                android:id="@+id/person_age_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Female: 60 yrs, Male: 26 yrs"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@+id/price_htv"
                app:layout_constraintTop_toBottomOf="@+id/person_count_tv"
                app:layout_constraintStart_toStartOf="@+id/person_count_tv"/>

            <TextView
                android:id="@+id/price_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Remittance"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/person_img" />

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$80"
                android:textColor="@color/light_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/price_htv"
                app:layout_constraintStart_toStartOf="@+id/price_htv"/>

            <TextView
                android:id="@+id/loc_tv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="dbcjhvhjxvaj dcbdjc jnsjk "
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/date_img"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/loc_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_location_on_24"
                app:tint="@color/text_grey"
                app:layout_constraintTop_toTopOf="@+id/date_img"
                app:layout_constraintEnd_toStartOf="@+id/loc_tv"/>

            <ImageView
                android:id="@+id/date_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_date_range_24"
                app:layout_constraintStart_toStartOf="@+id/person_img"
                app:layout_constraintTop_toBottomOf="@+id/person_age_tv"
                app:tint="@color/text_grey" />

            <TextView
                android:id="@+id/date_htv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Today, Sept 24"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@+id/loc_img"
                app:layout_constraintBottom_toBottomOf="@+id/date_img"
                app:layout_constraintStart_toEndOf="@+id/date_img"
                app:layout_constraintTop_toTopOf="@+id/date_img" />

            <ImageView
                android:id="@+id/time_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_access_time_24"
                app:layout_constraintTop_toBottomOf="@+id/date_img"
                app:layout_constraintStart_toStartOf="@+id/date_img"
                app:tint="@color/text_grey"/>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="12:00 AM - 02:30 PM"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/time_img"
                app:layout_constraintEnd_toStartOf="@+id/loc_img"
                app:layout_constraintStart_toEndOf="@+id/time_img"
                app:layout_constraintTop_toTopOf="@+id/time_img" />

            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/time_img"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/linear_lay_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/grey_corner_bg"
                android:orientation="horizontal"
                android:weightSum="1"
                android:padding="3dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/job_overview_card"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="7dp"
                    android:layout_weight="0.5">
                    <TextView
                        android:id="@+id/job_overview_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Job overview"
                        android:textColor="@color/white"
                        android:background="@color/black"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="11sp"
                        android:textStyle="bold"/>

                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="5dp"
                    android:layout_height="1dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/checklist_card"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="7dp"
                    android:layout_weight="0.5">
                    <TextView
                        android:id="@+id/checkList_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Checklist"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="11sp"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/relative_lay_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linear_lay_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="35dp">

                <TextView
                    android:id="@+id/job_desc_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Descriptions &amp; Responsiblities"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/job_desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_desc_htv"
                    android:layout_marginTop="7dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/medical_his_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_desc_tv"
                    android:layout_marginTop="20dp"
                    android:text="Medical History (if any):"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/medical_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medical_his_htv" />

                <TextView
                    android:id="@+id/job_exp_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medical_recycler"
                    android:layout_marginTop="20dp"
                    android:text="Job Experties Skill(s) Required:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/job_exp_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_exp_htv" />

                <TextView
                    android:id="@+id/other_req_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_exp_recycler"
                    android:layout_marginTop="20dp"
                    android:text="Other Requirements:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/other_req_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/other_req_htv"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_lay_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linear_lay_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="35dp">

                <TextView
                    android:id="@+id/checklist_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caregiver checklist personal care duties and tasks:"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/check_list_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checklist_htv" />
                <TextView
                    android:id="@+id/no_check_list_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Data"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/checklist_htv"/>

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>