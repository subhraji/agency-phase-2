<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="40dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caregiver Profile"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/back_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/back_btn" />

            <RelativeLayout
                android:id="@+id/image_lay_1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back_btn">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@color/color_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rating_bg_1"
                    android:drawableStart="@drawable/ic_baseline_star_24"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="3dp"
                    android:text="   4.5"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Alexa Brown"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_lay_1"/>
            <TextView
                android:id="@+id/caregiver_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Part time caregiver, Female"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_tv"/>
            <LinearLayout
                android:id="@+id/linear_lay_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/caregiver_type_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caregiver Exp"
                        android:textSize="13sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 years"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/care_completed_htv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Care Completed"
                        android:textSize="13sp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/care_completed_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_alignStart="@+id/care_completed_htv"
                        android:layout_below="@+id/care_completed_htv"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/age_htv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/age_tv"
                        android:text="Age"
                        android:textSize="13sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/age_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/age_htv"
                        android:text="27 years"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_lay_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:background="@color/color_grey"/>
            <TextView
                android:id="@+id/background_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view_1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="Background"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/background_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/background_htv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="7dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."/>
            <TextView
                android:id="@+id/education_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/background_tv"
                app:layout_constraintStart_toStartOf="@+id/background_tv"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Education"
                android:layout_marginTop="15dp"/>
            <RelativeLayout
                android:id="@+id/relative_lay_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/education_htv"
                app:layout_constraintStart_toStartOf="@+id/background_tv"
                app:layout_constraintEnd_toEndOf="@+id/background_tv"
                android:layout_marginTop="7dp">
                <ImageView
                    android:id="@+id/school_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_school_24"/>
                <TextView
                    android:id="@+id/school_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="South eastern high school"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_toRightOf="@+id/school_img"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:id="@+id/course_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/school_name"
                    android:layout_alignStart="@+id/school_name"
                    android:text="High school diploma"
                    android:textSize="13sp"
                    android:textColor="@color/text_grey"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/course_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/course_name_tv"
                    android:layout_alignStart="@+id/school_name"
                    android:text="2007-2010"
                    android:textSize="13sp"
                    android:textColor="@color/text_grey"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_lay_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/relative_lay_1"
                app:layout_constraintStart_toStartOf="@+id/background_tv"
                app:layout_constraintEnd_toEndOf="@+id/background_tv"
                android:layout_marginTop="7dp">
                <ImageView
                    android:id="@+id/school_img_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_school_24"/>
                <TextView
                    android:id="@+id/school_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="South eastern high school"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_toRightOf="@+id/school_img_2"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:id="@+id/course_name_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/school_name_2"
                    android:layout_alignStart="@+id/school_name_2"
                    android:text="High school diploma"
                    android:textSize="13sp"
                    android:textColor="@color/text_grey"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/course_duration_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/course_name_tv_2"
                    android:layout_alignStart="@+id/school_name_2"
                    android:text="2007-2010"
                    android:textSize="13sp"
                    android:textColor="@color/text_grey"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/caregiver_certificate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/relative_lay_2"
                app:layout_constraintStart_toStartOf="@+id/background_tv"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Caregiver Certificate"
                android:layout_marginTop="15dp"/>
            <RelativeLayout
                android:id="@+id/relative_lay_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/caregiver_certificate"
                app:layout_constraintStart_toStartOf="@+id/background_tv"
                app:layout_constraintEnd_toEndOf="@+id/background_tv"
                android:layout_marginTop="7dp">
                <ImageView
                    android:id="@+id/badge_img_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_badge_24"/>

                <TextView
                    android:id="@+id/certificate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/badge_img_2"
                    android:text="CPR Trained"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/certificate_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/certificate_name"
                    android:layout_alignStart="@+id/certificate_name"
                    android:text="2007"
                    android:textSize="13sp"
                    android:textColor="@color/text_grey"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/review_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/relative_lay_3"
                app:layout_constraintStart_toStartOf="@+id/background_tv"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Review"
                android:layout_marginTop="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/review_htv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="7dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@color/text_grey"/>
                <TextView
                    android:id="@+id/user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Auliya"
                    android:layout_toRightOf="@+id/user_img"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 day ago"
                    android:textSize="13sp"
                    android:textColor="@color/text_grey"
                    android:layout_below="@+id/user_name_tv"
                    android:layout_alignStart="@+id/user_name_tv"/>
                <TextView
                    android:id="@+id/rating_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"/>
                <ImageView
                    android:id="@+id/star_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_star_24"
                    app:tint="@color/light_blue"
                    android:layout_toLeftOf="@+id/rating_tv"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English."
                    android:textSize="13sp"
                    android:textColor="@color/text_grey"
                    android:layout_below="@+id/time_tv"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>