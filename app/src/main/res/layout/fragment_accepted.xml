<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.AcceptedFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ongoing_jobs_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ongoing Jobs"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/see_all_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textColor="@color/theme_blue"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/ongoing_jobs_htv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ongoing_jobs_htv" />
            <RelativeLayout
                android:id="@+id/ongoing_jobs_relay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ongoing_jobs_htv">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/ongoing_shimmer_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/open_jobs_shimmer_layout" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ongoing_job_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/no_data_ongoing_lottie"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:lottie_rawRes="@raw/no_data_lottie"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/upcoming_jobs_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Jobs"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ongoing_jobs_relay"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/see_all_htv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textColor="@color/theme_blue"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/upcoming_jobs_htv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/upcoming_jobs_htv" />
            <RelativeLayout
                android:id="@+id/upcoming_jobs_relay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/upcoming_jobs_htv">

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/upcoming_shimmer_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/open_jobs_shimmer_layout" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/upcoming_job_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/no_data_upcoming_lottie"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:lottie_rawRes="@raw/no_data_lottie"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>